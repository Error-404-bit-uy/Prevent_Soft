<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="800dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tools_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E25E1493"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/tools_list_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_tools_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="680dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tools_list_title" />

</androidx.constraintlayout.widget.ConstraintLayout>